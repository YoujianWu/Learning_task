<launch>
	<param name="use_sim_time" value="true" />
	<param name="robot_description" textfile="$(find robot_car)/urdf/robot_description.urdf"/>
	<rosparam file="$(find robot_car)/config/controllers.yaml" command="load"/>

	<node pkg="rviz" type="rviz" name="rviz" args="-d $(find robot_car)/rviz/robot_description.rviz"/>
	 <include file="$(find gazebo_ros)/launch/empty_world.launch" />
    <node name="spawn_mbot" pkg="gazebo_ros" type="spawn_model" args="-file $(find robot_car)/urdf/robot_description.urdf -urdf -model mbot" />
    <node name="controller_manager" pkg="controller_manager" type="controller_manager" />

    <node name="controller_spawner" pkg="controller_manager" type="spawner" respawn="false"
        output="screen" args="
            controller/joint_state_controller
            controller/joint_state_controller
            controller/left_front_wheel_controller
            controller/left_back_wheel_controller
            controller/right_front_wheel_controller
            controller/right_back_wheel_controller
    "/>
    <!-- 添加关节状态发布节点 -->
    <node pkg="joint_state_publisher" type="joint_state_publisher" name="joint_state_publisher" output="screen"/>
    <!-- 添加机器人状态发布节点 -->
    <node pkg="robot_state_publisher" type="robot_state_publisher" name="robot_state_publisher" />
    <!-- 可选:用于控制关节运动的节点 -->
    <node pkg="joint_state_publisher_gui" type="joint_state_publisher_gui" name="joint_state_publisher_gui" />


</launch>
